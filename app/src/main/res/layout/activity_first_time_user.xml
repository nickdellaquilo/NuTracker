<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstTimeUser"
    android:background="@color/dark_brown">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="122dp"
        android:layout_height="211dp"
        android:layout_marginStart="145dp"
        android:layout_marginTop="-50dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_create_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:text="@string/create_profile"
        android:textAlignment="center"
        android:textColor="@color/brown"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="145dp"
        android:background="@color/peach"
        />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="170dp"
        android:text="Name: "
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/dark_brown"/>


    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="95dp"
        android:layout_marginTop="160dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:textSize="15sp"
        android:hint="Enter Full Name"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/genderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="225dp"
        android:layout_marginHorizontal="15dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:text="Gender:"
        android:textColor="@color/dark_brown"/>

    <RadioGroup
        android:id="@+id/genderRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="225dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/maleRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Male"
            android:textSize="16sp"
            android:buttonTint= "@color/dark_brown"
            android:textColor="@color/dark_brown"/>

        <RadioButton
            android:id="@+id/femaleRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="15dp"
            android:text="Female"
            android:textSize="16sp"
            android:buttonTint= "@color/dark_brown"
            android:textColor="@color/dark_brown" />

    </RadioGroup>

    <TextView
        android:id="@+id/heightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="280dp"
        android:text="Height (cm):"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/dark_brown"/>

    <EditText
        android:id="@+id/heightEditText"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="145dp"
        android:layout_marginTop="270dp"
        android:layout_weight="1"
        android:inputType="number"
        android:background="@color/white"
        android:textSize="15sp"
        android:hint="..."
        android:textAlignment="center"/>


    <TextView
        android:id="@+id/ageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="330dp"
        android:layout_marginHorizontal="15dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:text="Age: "
        android:textColor="@color/dark_brown"/>


    <EditText
        android:id="@+id/ageEditText"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="68dp"
        android:layout_marginTop="325dp"
        android:inputType="number"
        android:background="@color/white"
        android:layout_weight="1"
        android:textSize="15sp"
        android:hint="..."
        android:textAlignment="center"/>



    <TextView
        android:id="@+id/weightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="390dp"
        android:layout_marginHorizontal="15dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:text="Weight (kg):"
        android:textColor="@color/dark_brown"/>



        <EditText
            android:id="@+id/weightEditText"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="145dp"
            android:layout_marginTop="380dp"
            android:inputType="number"
            android:background="@color/white"
            android:layout_weight="1"
            android:textSize="15sp"
            android:hint="..."
            android:textAlignment="center"/>


    <TextView
        android:id="@+id/activityLevelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="455dp"
        android:layout_marginHorizontal="15dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/dark_brown"
        android:text="Activity Level: " />

    <Spinner
        android:id="@+id/activityLevelSpinner"
        style="@style/buttonWhite"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="165dp"
        android:layout_marginTop="445dp"
        android:entries="@array/activity_levels"
        android:textAlignment="center" />

    <Button
        android:id="@+id/saveButton"
        style="@style/buttonOrange2"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="480dp"
        android:text="Save"
        android:textColor="@color/white" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>