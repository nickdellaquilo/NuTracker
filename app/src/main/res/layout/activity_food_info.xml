<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/peach"
    tools:context=".FoodInfo">

    <ImageView
        style="@style/bg_Orange"
        android:layout_width="375dp"
        android:layout_height="325dp"
        android:layout_gravity="center"></ImageView>

    <ImageView
        android:id="@+id/acorn3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginStart="250dp"
        android:layout_marginTop="55dp"
        android:scaleX = "-1"
        android:src="@drawable/acorn" />

    <ImageView
        android:id="@+id/acorn2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="55dp"
        android:scaleX = "-1"
        android:src="@drawable/acorn" />

    <ImageView
        android:id="@+id/acorn1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginStart="-250dp"
        android:layout_marginTop="55dp"
        android:scaleX = "-1"
        android:src="@drawable/acorn" />

    <TextView
        android:id="@+id/FoodNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="165dp"
        android:text="Food: "
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/FoodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="125dp"
        android:layout_marginTop="165dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/IDTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="220dp"
        android:text="FDC ID: "
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/IdNumber"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="145dp"
        android:layout_marginTop="220dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>


    <Button
        android:id="@+id/addButton"
        style="@style/buttonBrown"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="240dp"
        android:text="Add" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>