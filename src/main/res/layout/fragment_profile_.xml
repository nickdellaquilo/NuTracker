<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/peach"
    tools:context=".profile_Fragment">


    <ImageView
        android:id="@+id/brown_bg"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-10dp"
        android:src="@drawable/bg_brown" />


    <ImageView
        android:id="@+id/leaf_right"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginStart="70dp"
        android:layout_marginTop="-200dp"
        android:src="@drawable/leaf_right" />

    <ImageView
        android:id="@+id/leaf_left"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginStart="-70dp"
        android:layout_marginTop="-200dp"
        android:scaleX = "-1"
        android:src="@drawable/leaf_right" />

    <ImageButton
        android:id="@+id/btn_profile_pic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="-220dp"
        android:background="@drawable/default_pic"
        android:scaleType="fitCenter"/>

    <ImageView
        android:id="@+id/nut_badge"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity = "center"
        android:layout_marginTop="-120dp"
        android:src="@drawable/nut_badge" />

    <TextView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:layout_marginHorizontal="15dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:text="Name: John Doe" />

    <TextView
        android:id="@+id/genderTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:layout_marginHorizontal="15dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:text="Gender: Male" />

    <TextView
        android:id="@+id/heightTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginHorizontal="15dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:text="Height: 175 cm" />

    <TextView
        android:id="@+id/ageTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:layout_marginHorizontal="15dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:text="Age: 25 years" />

    <TextView
        android:id="@+id/weightTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="380dp"
        android:layout_marginHorizontal="15dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:text="Weight: 70.0 kg" />

    <TextView
        android:id="@+id/activityLevelTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="420dp"
        android:layout_marginHorizontal="15dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:text="Activity Level: Little" />

    <Button
        android:id="@+id/editButton"
        style="@style/buttonBrown"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="190dp"
        android:text="Edit Profile" />

</FrameLayout>